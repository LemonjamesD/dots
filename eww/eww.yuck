(defwidget bar []
  (centerbox :orientation "h"
    (left)
	(center)
	(right)))

(defwidget left [] 
  (box :class "rcorners"))
    
(defwidget center [] 
  (box :class "rcorners center"
       :halign "center"
       :width 50
    (metric :label "${round(EWW_TEMPS.K10TEMP_TCCD1, 1)}Â°C"
            :icon "images/temp.png"
            :value {EWW_TEMPS.K10TEMP_TCCD1}
            :min 41
            :max 100)
    (metric :label "${round(EWW_CPU.avg, 1)}%"
